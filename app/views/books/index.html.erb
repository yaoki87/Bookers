
<h1>Books</h1>

<table>
  
  
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <% @books.each do |book| %>
        <br>
         <sp><%= book.title %></p>
         <p><%= book.body %></p>
         
        <% end %>
      </tr>

  </tbody>
</table>


<h2>New book</h2>
<%= form_with model: @book, local:true do |f| %>

  <h4>title</h4>
  <%= f.text_field :title %>

  <h4>body</h4>
  <%= f.text_area :body %>

  <br>
  <%= f.submit 'Create Book' %>

<% end %>