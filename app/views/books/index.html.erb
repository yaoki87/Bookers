

<h1>Books</h1>

<table>


  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
  </thead>

  <tbody>

      <% @books.each do |book| %>
        <tr>

         <td><%= book.title %></td>
         <td><%= book.body %></td>
         <td><%= link_to 'Show', book_path(book), class: "show_#{book.id}" %></td>
         <td><%= link_to 'Edit', edit_book_path(book), class: "edit_#{book.id}" %></td>
         <td><%= link_to 'Destroy', book_path(book), method: :delete, class: "destroy_#{book.id}", "data-confirm" => "Are you sureï¼Ÿ" %></td>

        </tr>
      <% end %>


  </tbody>
</table>


<h2>New book</h2>
<%= form_with model: @book, local:true do |f| %>

  <h4>title</h4>
  <%= f.text_field :title %>

  <h4>body</h4>
  <%= f.text_area :body %>

  <br>
  <%= f.submit 'Create Book' %>

<% end %>